block content
	.wrap
		.ui
			.controls
				.upload-img
					p choose file
				ul.mode
					li Choose rendering mode:
					li.div
						input(type="radio")(name="mode")
						span div
							small.red (slow)
					li.box-shadow
						input(type="radio")(name="mode")(checked="checked")
						span box-shadow
							small.green (fast)
			.notification.red
		.output
			div
		form
			textarea(rows="10")
			textarea(rows="10")
		input.input-img.hidden(type="file")(accept="image/*")


